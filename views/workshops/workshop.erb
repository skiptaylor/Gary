<div id="banner">
	Dr. Arthur presents both <span style="font-weight: 800;">NCE</span> and <span style="font-weight: 800;">NCMHCE</span> Workshops
</div>
<div class="container">
	<div class="row mar-top">
		<div class="col-md-10 col-md-offset-1">
			<form method="post" class="form-horizontal" role="form">
				<div class="form-group">
					<label for="name" class="col-sm-2 control-label"> </label>
					<div class="col-sm-10">
						<h1>Workshop</h1>
					</div>
				</div>
				<div class="form-group">

				<div class="checkbox">
				  <label  for="nce">
				    <input type="checkbox" name="nce" id="nce" <%= 'checked="checked"' if @workshop.nce %> />
				    NCE
				  </label>

				  
				</div>
				<div class="checkbox">
				  <label  for="ncmhce">
				    <input type="checkbox" name="ncmhce" id="ncmhce" <%= 'checked="checked"' if @workshop.ncmhce %> />
				    NCMHCE
				  </label>

				</div>
				<div class="form-group">
					<label for="venue" class="col-sm-2 control-label">Venue</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="venue" name="venue" value="<%= @workshop.venue %>" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Start date</label>
					<div class="col-sm-10">
						 <%= date_to_field('start_date', @workshop.start_date) %>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">End date</label>
					<div class="col-sm-10">
						 <%= date_to_field('end_date', @workshop.end_date) %>
					</div>
				</div>
				<div class="form-group">
					<label for="description" class="col-sm-2 control-label">Description</label>
					<div class="col-sm-10">
						<textarea type="text" class="form-control" rows="16" id="description" name="description"><%= @workshop.description %></textarea>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-success btn-md">Save</button>&nbsp;&nbsp;<a href="/workshops" class="btn btn-default btn-md">Cancel</a>
					</div>
				</div>
			</form>

				<hr />

				<p><strong>Reservations</strong></p>
	
				<p>
					<% @workshop.reservations.each do |r| %>
						<%= r.name %> &nbsp;&nbsp;&nbsp;&nbsp; <a href="mailto:<%= r.email %>"><%= r.email %></a><br />
					<% end %>
				</p>
	
			</div>
			</div>
			</div>